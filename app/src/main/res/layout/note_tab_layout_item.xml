<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/gray_light_text"
        android:textSize="8sp"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/title_new"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/primary_title"
        android:textSize="9sp"
        android:visibility="gone"
        tools:text="@tools:sample/full_names" />

    <FrameLayout
        android:id="@+id/unread_count_layout"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/chat_counter"
        android:visibility="gone">

        <TextView
            android:id="@+id/unread_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="6sp"
            android:visibility="visible" />
    </FrameLayout>

</RelativeLayout>